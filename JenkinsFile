pipeline {
    agent {
        docker {
            image 'openjdk:17-jdk'
            args '-u root:root'  // Opcional, si necesitas permisos root
        }
    }
    environment {
        IMAGE_NAME = "santiagoprado21/santiagoprado21-user-service-container"
        // Usa un tag din√°mico con fecha y hora para evitar conflictos
        IMAGE_TAG = "${env.BUILD_ID ?: 'latest'}"
        DOCKER_CREDENTIALS_ID = "dockerhub-credentials"
    }
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/santiagoprado21/ecommerce-microservice-backend-app.git'
            }
        }
        stage('Check Java Version') {
            steps {
                sh 'java -version'
            }
        }
        stage('Prepare') {
            steps {
                sh 'chmod +x user-service/gradlew'
            }
        }
        stage('Build & Test') {
            steps {
                dir('user-service') {
                    sh './gradlew clean build'
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                dir('user-service') {
                    script {
                        docker.build("${IMAGE_NAME}:${IMAGE_TAG}")
                    }
                }
            }
        }
        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', "${DOCKER_CREDENTIALS_ID}") {
                        docker.image("${IMAGE_NAME}:${IMAGE_TAG}").push()
                    }
                }
            }
        }
    }
}
