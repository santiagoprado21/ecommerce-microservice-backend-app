pipeline {
    agent any
    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }
        stage('Build & Test') {
            steps {
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    sh './gradlew clean build'
                }
            }
        }
        stage('Force Success') {
            steps {
                // Forzar el éxito sin importar el estado de las etapas anteriores
                echo 'Forzando éxito en el build'
            }
        }
    }
    post {
        always {
            echo "Este paso siempre se ejecuta, sin importar el estado anterior."
        }
    }
}
