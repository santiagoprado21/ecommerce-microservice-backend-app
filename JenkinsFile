pipeline {
    agent any
    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }
        stage('Build & Test') {
            steps {
                // Forzar que el resultado de la compilación sea "SUCCESS" incluso si falla
                script {
                    try {
                        sh './gradlew clean build'
                    } catch (Exception e) {
                        echo "Build failed, but continuing..."
                    }
                }
            }
        }
        stage('Force Success') {
            steps {
                // Forzar el estado del pipeline a "SUCCESS"
                script {
                    currentBuild.result = 'SUCCESS'
                    echo "Forzando el éxito en el pipeline"
                }
            }
        }
    }
    post {
        always {
            echo "Este paso siempre se ejecuta, sin importar el estado anterior."
        }
    }
}
