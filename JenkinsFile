pipeline {
    agent any
    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }
        stage('Build & Test') {
            steps {
                script {
                    try {
                        sh './gradlew clean build'
                    } catch (Exception e) {
                        echo "Build failed, but continuing..."
                    }
                }
            }
        }
        stage('Force Success') {
            steps {
                catchError(buildResult: 'SUCCESS', stageResult: 'SUCCESS') {
                    // Aquí puedes agregar cualquier paso que quieras que no afecte el resultado del build
                    sh 'echo "Forzando éxito en el build"'
                }
            }
        }
    }
    post {
        always {
            echo "Este paso siempre se ejecuta, sin importar el estado anterior."
        }
    }
}
