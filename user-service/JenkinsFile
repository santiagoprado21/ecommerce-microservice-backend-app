pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/SelimHorri/ecommerce-microservice-backend-app.git'
            }
        }
        stage('Build') {
            steps {
                sh './gradlew build'
            }
        }
        stage('Docker Build') {
            steps {
                script {
                    docker.build('santiagoprado/user-service')
                }
            }
        }
        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://hub.docker.com/r/santiagoprado', 'dockerhub-credentials') {
                        docker.image('santiagoprado/user-service').push('latest')
                    }
                }
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                script {
                    sh 'kubectl apply -f deployment.yaml'
                    sh 'kubectl apply -f service.yaml'
                }
            }
        }
    }
}
